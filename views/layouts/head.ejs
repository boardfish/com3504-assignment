<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="/stylesheets/style.css">

  <title><%= title %></title>
</head>

<body>
  <nav class="navbar navbar-expand-lg">
    <a class="navbar-brand" href="/">Nodethings</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <% navbar.filter(item => !item.loggedInOnly).forEach(({ name, href, className }) => { %>
          <li class="nav-item <%= href === path ? 'active' : '' %>">
            <a class="nav-link <%= className || '' %>" href="<%= href %>">
              <%= name %>
              <% if (href === path) { %>
                <span class="sr-only">(current)</span>
              <% } %>
            </a>
          </li>
        <% }) %>
      </ul>
      <ul class="navbar-nav">
        <span class="navbar-text mr-3"><%= user.nickname %></span>
        <% navbar.filter(item => item.loggedInOnly && !(user._id === undefined)).forEach(({ name, href, className }) => { %>
          <li class="nav-item <%= href === path ? 'active' : '' %>">
            <a class="nav-link <%= className || '' %>" href="<%= href %>">
              <%= name %>
              <% if (href === path) { %>
                <span class="sr-only">(current)</span>
              <% } %>
            </a>
          </li>
        <% }) %>
      </ul>
    </div>
  </nav>
  <main class="container mt-3">